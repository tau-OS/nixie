<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="NixieWorldRow" parent="HeBin">
    <style>
      <class name="mini-content-block"/>
    </style>
    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">1</property>
            <child>
              <object class="GtkLabel" id="block_title">
                <property name="halign">start</property>
                <style>
                  <class name="cb-title"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="block_subtitle">
                <property name="halign">start</property>
                <style>
                  <class name="cb-subtitle"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="HeButton" id="delete_button">
            <property name="valign">center</property>
            <property name="halign">end</property>
            <property name="is-disclosure">1</property>
            <property name="tooltip_text" translatable="yes">Delete</property>
            <property name="icon">edit-delete-symbolic</property>
            <signal name="clicked" handler="delete" object="NixieWorldRow" swapped="no"/>
            <style>
              <class name="meson-red"/>
            </style>
          </object>
        </child>
      </object>
    </child>>
  </template>
</interface>